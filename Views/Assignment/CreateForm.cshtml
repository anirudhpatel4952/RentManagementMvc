@model AssignmentViewModel;

@{
    var action = "Remove";
    if (ViewBag.IsCreating == true){
        action = "Create";
    }

}
<div>
    <form asp-action="@action">
        <input type="hidden" asp-for="Unit"/>
        <div class="form-group">
            <label asp-for="Unit">Unit</label>
            <input type="text" class="form-control" asp-for="Unit" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="TenantId">Tenant</label>
            <select asp-for="TenantId" asp-items="@Model.TenantList" class="form-control">
            </select>
            @* <input type="text" class="form-control" asp-for="TenantId"> *@
            <span class="text-danger" asp-validation-for="TenantId"></span>
        </div>

        <button type="submit" class="btn btn-success">Assign</button>
    </form>
</div>