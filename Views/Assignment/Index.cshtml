@model List<rentManagement.Models.Assignment>

<h2>List Of Assignments/Contracts</h2>

<div>
    <div>Number of Assignments: @Model.Count</div> &nbsp;
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tenant Full Name</th>
                <th>Unit Number Assigned</th>
                <th>Assignment Date/Contract Date</th>
                <th>Assignment Id</th>
                <th>Assignment Status</th>
            </tr>
        </thead>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Tenant.FullName</td>
                <td>@Model[i].Rental.Unit</td>
                <td>@Model[i].ContractDate</td>
                <td>@Model[i].AssignId</td>
                @if(@Model[i].IsAssigned == false){
                    <td style="color: red;">Removed</td>
                }
                else{
                    <td style="color: green;">Completed</td>
                }
            </tr>
        }


    </table>

</div>